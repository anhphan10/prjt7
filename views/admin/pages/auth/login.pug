extends ../../layout/auth.pug
include ../../mixins/alert.pug 

block main
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Đăng Nhập
                form(
                    action=`${prefixAdmin}/auth/login`
                    method="POST"
                )
                    div(class="form-group")
                        label(for="email") Email
                        br 
                        input(
                            type="text"
                            class="form-group"
                            id="email"
                            name="email"
                            required
                        )
                    div(class="form-group")
                        label(for="password") Mật Khẩu
                        br 
                        input(
                            type="password"
                            class="form-group"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                        ) Đăng Nhập
